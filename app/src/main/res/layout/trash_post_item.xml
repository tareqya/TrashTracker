<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/trash_TV_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Post title"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <Button
                    android:id="@+id/trash_BTN_openInMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Open in map"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/red"
                    app:icon="@drawable/baseline_location_on_24" />

                <Button
                    android:id="@+id/trash_BTN_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/green"
                    app:icon="@drawable/baseline_local_phone_24" />

                <TextView
                    android:id="@+id/trash_TV_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Test"
                    />

                <TextView
                    android:id="@+id/trash_TV_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/4/2024"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/trash_IV_postImage"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_person_24"

                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>